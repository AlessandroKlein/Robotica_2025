<?xml version="1.0"?>
<robot name="diffbot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- Propiedades y macros -->
    <xacro:property name="chassis_mass" value="0.8"/>
    <xacro:property name="wheel_radius" value="0.035"/>
    <xacro:include filename="$(find tp1_robot)/urdf/inertial_macros.xacro"/>
    <xacro:include filename="$(find tp1_robot)/urdf/motor.xacro"/>

    <!-- Base del robot -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find tp1_robot)/meshes/chassis.stl"/>
            </geometry>
        </visual>
        <collision>
            <geometry><box size="0.195 0.1 0.05"/></geometry>
        </collision>
        <xacro:inertial_box mass="0.8" x="0.195" y="0.1" z="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- Macro de ruedas -->
    <xacro:macro name="wheel" params="prefix side xyz rpy axis">
    <link name="${prefix}_wheel">
        <visual>
        <origin rpy="1.5708 0 0"/> <!-- Rotación de 90° en X -->
        <geometry>
            <cylinder radius="0.035" length="0.025"/>
        </geometry>
        </visual>
        <collision>
        <origin rpy="1.5708 0 0"/> <!-- También rotamos para colisiones -->
        <geometry>
            <cylinder radius="0.035" length="0.025"/>
        </geometry>
        </collision>
    </link>
    <joint name="${prefix}_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="${prefix}_wheel"/>
        <axis xyz="${axis}"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>
    </xacro:macro>

    <!-- Instanciar ruedas y motores -->
    <!-- <xacro:wheel prefix="left" side="1"/>
        <xacro:wheel prefix="right" side="-1"/> -->
    <!-- Ejemplo con nueva posición y rotación xyz="0.0625 0.08 -0.025" -->
    <xacro:wheel prefix="left"  side="1"  xyz="-0.0625 0.08 -0.025"  rpy="0 0 0" axis="0 1 0"/>
    <xacro:wheel prefix="right" side="-1" xyz="-0.0625 -0.08 -0.025" rpy="0 0 0" axis="0 1 0"/>

    <xacro:motor prefix="left" chassis_width="0.1" reflect="false"/>
    <xacro:motor prefix="right" chassis_width="0.1" reflect="true"/>


    <!-- Transformación estática odom -> base_link -->
    <link name="odom"/>
    <joint name="odom_to_base_link" type="fixed">
        <parent link="odom"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Plugin de Gazebo y ros2_control -->
    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_diff_drive.so">
            <ros><namespace>/diffbot</namespace></ros>
            <wheel_separation>0.16</wheel_separation>
            <wheel_diameter>0.07</wheel_diameter>
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
        </plugin>
    </gazebo>
    <ros2_control name="diffbot_controller" type="system">
        <hardware><plugin>gazebo_ros2_control/RobotHWSim</plugin></hardware>
        <joint name="left_wheel_joint">
            <command_interface name="velocity"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
        <joint name="right_wheel_joint">
            <command_interface name="velocity"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
    </ros2_control>
</robot>