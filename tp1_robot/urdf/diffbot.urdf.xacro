<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro"
       xmlns:gazebo="http://www.gazebosim.org/schema/gazebo_urdf"
       name="diffbot">

  <!-- ======================= -->
  <!-- === Propiedades === -->
  <!-- ======================= -->

  <xacro:property name="chassis_mass" value="0.8"/>
  <xacro:property name="wheel_radius" value="0.035"/> <!-- Radio de la rueda en metros -->
  <xacro:property name="wheel_width" value="0.025"/> <!-- Ancho de la rueda en metros -->
  <xacro:property name="wheel_separation" value="0.16"/> <!-- Separación entre ruedas en metros -->
  <xacro:property name="wheel_color" value="silver"/>
  <xacro:property name="caster_origin_xyz" value="-0.075 0 -0.0015"/> <!-- Posición del caster respecto al chasis (x: atrás, y: centro, z: altura) -->
  <xacro:property name="caster_color" value="orange"/>

  <!-- ======================= -->
  <!-- === Includes === -->
  <!-- ======================= -->

  <xacro:include filename="$(find tp1_robot)/urdf/inertial_macros.xacro"/>
  <xacro:include filename="$(find tp1_robot)/urdf/motor.xacro"/>

  <!-- ======================= -->
  <!-- === Chasis del robot === -->
  <!-- ======================= -->

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="file://$(find tp1_robot)/meshes/chassis.stl"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.195 0.1 0.05"/> <!-- Tamaño del chasis (x: largo, y: ancho, z: alto) -->
      </geometry>
    </collision>
    <xacro:inertial_box mass="${chassis_mass}" x="0.195" y="0.1" z="0.05"/>
  </link>

  <!-- ======================= -->
  <!-- === Macro para ruedas === -->
  <!-- ======================= -->

  <xacro:macro name="wheel" params="prefix xyz axis rpy">
    <link name="${prefix}_wheel">
      <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/> <!-- Origen de la visualización de la rueda -->
        <geometry>
          <mesh filename="file://$(find tp1_robot)/meshes/wheel.stl"/>
        </geometry>
        <material name="${wheel_color}"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/> <!-- Origen de la colisión de la rueda -->
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.2"/>
        <origin xyz="0 0 0" rpy="0 0 0"/> <!-- Centro de masa de la rueda -->
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                 iyy="0.001" iyz="0.0"
                 izz="0.001"/>
      </inertial>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <origin xyz="${xyz}" rpy="${rpy}"/> <!-- Posición de la rueda respecto al chasis (x: adelante/atrás, y: izquierda/derecha, z: arriba/abajo) -->
      <parent link="base_link"/>
      <child link="${prefix}_wheel"/>
      <axis xyz="${axis}"/>
      <limit effort="10.0" velocity="10.0"/>
      <dynamics damping="0.1"/>
    </joint>

    <!-- Gazebo settings -->
    <gazebo reference="${prefix}_wheel">
      <mu1>1.0</mu1>
      <mu2>1.0</mu2>
      <material>Gazebo/Grey</material>
    </gazebo>
  </xacro:macro>

  <!-- ======================= -->
  <!-- === Ruedas y motores === -->
  <!-- ======================= -->

  <xacro:wheel prefix="left"  xyz="0.0185  0.05 -0.0175" axis="0 1 0" rpy="0 1.5708 0"/> <!-- Rueda izquierda (x: adelante, y: izquierda, z: abajo) -->
  <xacro:wheel prefix="right" xyz="0.0185 -0.05 -0.0175" axis="0 1 0" rpy="0 1.5708 3.14159"/> <!-- Rueda derecha (x: adelante, y: derecha, z: abajo) -->
  <xacro:motor prefix="left" chassis_width="0.1" reflect="false"/>
  <xacro:motor prefix="right" chassis_width="0.1" reflect="true"/>

  <!-- ======================= -->
  <!-- === Caster === -->
  <!-- ======================= -->

  <link name="caster">
    <visual>
      <origin xyz="0 0 0.0045" rpy="0 0 0"/> <!-- Origen de la visualización del caster -->
      <geometry>
        <mesh filename="file://$(find tp1_robot)/meshes/caster_base.stl"/>
      </geometry>
      <material name="${caster_color}"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.0045" rpy="0 0 0"/> <!-- Origen de la colisión del caster -->
      <geometry>
        <box size="0.05 0.05 0.01"/> <!-- Tamaño del caster (x: largo, y: ancho, z: alto) -->
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster"/>
    <origin xyz="${caster_origin_xyz}" rpy="0 0 0"/> <!-- Posición del caster respecto al chasis -->
  </joint>

  <link name="caster_wheel">
    <visual>
      <origin xyz="-0.015 0 -0.020" rpy="0 0 0"/> <!-- Origen de la visualización de la rueda del caster -->
      <geometry>
        <mesh filename="file://$(find tp1_robot)/meshes/caster_wheel.stl"/>
      </geometry>
      <material name="${caster_color}"/>
    </visual>
    <collision>
      <origin xyz="-0.015 0 -0.030" rpy="0 0 0"/> <!-- Origen de la colisión de la rueda del caster (Modificar colicion rueda giro)-->
      <geometry>
        <cylinder radius="0.02" length="0.01"/> <!-- Radio y longitud de la rueda del caster -->
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="caster_wheel_joint" type="continuous">
    <parent link="caster"/>
    <child link="caster_wheel"/>
    <origin xyz="0 0 -0.01" rpy="0 0 0"/> <!-- Posición de la rueda del caster respecto al caster -->
    <axis xyz="0 0 1"/>
  </joint>

  <link name="caster_wheel_support">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/> <!-- Origen de la visualización del soporte del caster -->
      <geometry>
        <mesh filename="file://$(find tp1_robot)/meshes/caster_wheel_support.stl"/>
      </geometry>
      <material name="${caster_color}"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/> <!-- Origen de la colisión del soporte del caster -->
      <geometry>
        <box size="0.02 0.02 0.02"/> <!-- Tamaño del soporte del caster (x: largo, y: ancho, z: alto) -->
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="caster_support_joint" type="fixed">
    <parent link="caster_wheel"/>
    <child link="caster_wheel_support"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo properties for caster components -->
  <gazebo reference="caster">
    <material>Gazebo/Orange</material>
  </gazebo>

  <gazebo reference="caster_wheel">
    <material>Gazebo/Orange</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <gazebo reference="caster_wheel_support">
    <material>Gazebo/Orange</material>
  </gazebo>

  <!-- ======================= -->
  <!-- === Frame odométrico === -->
  <!-- ======================= -->

  <link name="odom"/>
  <joint name="odom_to_base_link" type="fixed">
    <parent link="odom"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ======================= -->
  <!-- === ros2_control === -->
  <!-- ======================= -->

  <ros2_control name="DiffbotSystemHardware" type="system">
    <hardware>
      <plugin>mock_components/GenericSystem</plugin>
    </hardware>

    <joint name="left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="caster_wheel_joint">
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <!-- ============================ -->
  <!-- === Plugin para Gazebo ==== -->
  <!-- ============================ -->

  <gazebo>
    <plugin name="gz_ros2_control" filename="libgz_ros2_control_system.so">
      <ros2_control_parameters>$(find tp1_robot)/config/diffbot_controllers.yaml</ros2_control_parameters>
    </plugin>
  </gazebo>

</robot>